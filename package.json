{
    "name": "parking-system-monorepo",
    "version": "1.0.0",
    "description": "Parking Management System - Frontend & Backend Monorepo",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"BACKEND,FRONTEND\" --prefix-colors \"green,blue\"",
        "dev:backend": "cd backend && npm run dev",
        "dev:frontend": "cd frontend && npm run dev",
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "build:frontend": "cd frontend && npm run build",
        "start:backend": "cd backend && npm run dev",
        "start:frontend": "cd frontend && npm run dev",
        "test:backend": "cd backend && npm run test",
        "migrate": "cd backend && npm run migrate",
        "migrate:fresh": "cd backend && npm run migrate:fresh",
        "seed": "cd backend && npm run seed"
    },
    "devDependencies": {
        "concurrently": "^9.0.1"
    }
}